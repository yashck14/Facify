<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/FacifyTitle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/facifytext"
            android:backgroundTint="#D5313453"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="15dp"
                android:text="Facify"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="87dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_person_24" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/emotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FacifyTitle">

            <TextView
                android:id="@+id/EmotionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:text="Emotion Playlist"
                android:textColor="#E1E1E1"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#1B1B1B"
                android:backgroundTint="#1B1B1B"
                android:orientation="horizontal"
                app:circularflow_radiusInDP="5dp"
                app:layout_constraintEnd_toEndOf="@+id/linear7"
                app:layout_constraintStart_toStartOf="@+id/linear7"
                app:layout_constraintTop_toBottomOf="@+id/linear7">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="21"
                    android:src="@drawable/baseline_music_note_24" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="Contempt"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginEnd="16dp"
                android:background="#1B1B1B"
                android:backgroundTint="#1B1B1B"
                android:orientation="horizontal"
                app:circularflow_radiusInDP="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/linear3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linear3">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="21"
                    android:background="#BDA321"
                    android:src="@drawable/angryimage" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="Angry"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:background="#1B1B1B"
                android:backgroundTint="#1B1B1B"
                android:orientation="horizontal"
                app:circularflow_radiusInDP="5dp"
                app:layout_constraintEnd_toStartOf="@+id/linear2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EmotionTitle">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="21"
                    android:background="#BDA321"
                    android:src="@drawable/happimage" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="Happy"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#1B1B1B"
                android:backgroundTint="#1B1B1B"
                android:orientation="horizontal"
                app:circularflow_radiusInDP="5dp"
                app:layout_constraintEnd_toEndOf="@+id/linear6"
                app:layout_constraintStart_toStartOf="@+id/linear6"
                app:layout_constraintTop_toBottomOf="@+id/linear6">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="21"
                    android:src="@drawable/baseline_music_note_24" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="Disgust"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#1B1B1B"
                android:backgroundTint="#1B1B1B"
                android:orientation="horizontal"
                app:circularflow_radiusInDP="5dp"
                app:layout_constraintEnd_toEndOf="@+id/linear2"
                app:layout_constraintStart_toStartOf="@+id/linear2"
                app:layout_constraintTop_toBottomOf="@+id/linear2">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="21"
                    android:background="#BDA321"
                    android:src="@drawable/neutralimage" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="Neutral"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#1B1B1B"
                android:backgroundTint="#1B1B1B"
                android:orientation="horizontal"
                app:circularflow_radiusInDP="5dp"
                app:layout_constraintEnd_toEndOf="@+id/linear8"
                app:layout_constraintStart_toStartOf="@+id/linear8"
                app:layout_constraintTop_toBottomOf="@+id/linear8">

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="21"
                    android:background="#BDA321"
                    android:src="@drawable/fearimage" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="Fear"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#1B1B1B"
                android:backgroundTint="#1B1B1B"
                android:orientation="horizontal"
                app:circularflow_radiusInDP="5dp"
                app:layout_constraintEnd_toEndOf="@+id/linear5"
                app:layout_constraintStart_toStartOf="@+id/linear5"
                app:layout_constraintTop_toBottomOf="@+id/linear5">

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="21"
                    android:background="#BDA321"
                    android:src="@drawable/surpriseimage" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="Surprise"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear8"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="#1B1B1B"
                android:backgroundTint="#1B1B1B"
                android:orientation="horizontal"
                app:circularflow_radiusInDP="5dp"
                app:layout_constraintEnd_toEndOf="@+id/linear3"
                app:layout_constraintStart_toStartOf="@+id/linear3"
                app:layout_constraintTop_toBottomOf="@+id/linear3">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="21"
                    android:background="#BDA321"
                    android:src="@drawable/sadimage" />

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="sad"
                    android:textSize="20sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="390dp"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#284AC6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/imageView6"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="6dp"
                    android:scaleType="fitCenter"
                    android:background="@color/cardview_light_background"
                    android:src="@drawable/baseline_library_music_24" />
                <ImageButton
                    android:id="@+id/imageView61"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="6dp"
                    android:scaleType="fitCenter"
                    android:background="@color/cardview_light_background"
                    android:src="@drawable/baseline_library_music_24" />
                <ImageButton
                    android:id="@+id/imageView62"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@color/cardview_light_background"
                    android:layout_marginEnd="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/baseline_library_music_24" />
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="390dp"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#284AC6"
            app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/horizontalScrollView"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/imageView70"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="6dp"
                    android:scaleType="fitCenter"
                    android:background="@color/cardview_light_background"
                    android:src="@drawable/baseline_library_music_24" />
                <ImageButton
                    android:id="@+id/imageView71"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="6dp"
                    android:scaleType="fitCenter"
                    android:background="@color/cardview_light_background"
                    android:src="@drawable/baseline_library_music_24" />
                <ImageButton
                    android:id="@+id/imageView72"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="fitCenter"
                    android:background="@color/cardview_light_background"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/baseline_library_music_24" />

            </LinearLayout>
        </HorizontalScrollView>

        <ImageButton
            android:id="@+id/imageView7"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/hindisongs"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/imageView8"
            app:layout_constraintHorizontal_bias="0.944"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emotion" />

        <ImageButton
            android:id="@+id/imageView8"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/englissongs"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>